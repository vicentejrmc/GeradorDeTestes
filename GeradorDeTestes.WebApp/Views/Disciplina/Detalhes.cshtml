@model DetalhesDisciplinaViewModel

@{
    ViewBag.Titulo = "Detalhes da Disciplina";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">

        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes</h3>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Nome" class="control-label fs-5">Nome:</label>
                    <input name="Nome" class="form-control" value="@Model.Nome" readonly disabled />
                </div>

                @if (Model.Materias.Count > 0)
                {
                    <label for="Materias" class="control-label fs-5 mt-4">Matérias:</label>

                    <table class="table table-sm table-striped mt-2">
                        <thead>
                            <tr>
                                <th>Nome</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.Materias)
                            {
                                <tr>
                                    <td>@m</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a asp-action="Index">Voltar para a listagem</a>
                </div>
            </div>
        </div>

    </div>
</div>